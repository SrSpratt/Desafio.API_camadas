@model Desafio.Consumer.Models.Dtos.ProductViewModel

@{
    ViewData["Title"] = "Create Product";
}
<script src="~/js/JavaScript.js"></script>
<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateHandler">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SaleValue" class="control-label"></label>
                <input asp-for="SaleValue" class="form-control" />
                <span asp-validation-for="SaleValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplier" class="control-label"></label>
                <input asp-for="Supplier" class="form-control" />
                <span asp-validation-for="Supplier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" asp-items="@(new SelectList(Model.categories,"Name","Name" ))" class="form-control">
                    <option>  Category </option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpirationDate" class="control-label"></label>
                <input asp-for="ExpirationDate" class="form-control" />
                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Operation.OperationDate" class="control-label"></label>
                <input id="Operation.OperationDate" name="Operation.OperationDate" value="@DateTime.Now.ToString()" class="form-control" readonly="@true" />
                <span asp-validation-for="Operation.OperationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Operation.OperationUser" class="control-label"></label>
                <input asp-for="Operation.OperationUser" value="@User.Identity.Name" class="form-control" readonly="@true"/>
                <span asp-validation-for="Operation.OperationUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Operation.OperationType" class="control-label"></label>
                <input asp-for="Operation.OperationType" value="@("Create")" class="form-control" readonly="@true"/>
                <span asp-validation-for="Operation.OperationType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Operation.OperationAmount" class="control-label"></label>
                <input asp-for="Operation.OperationAmount" class="form-control" readonly="@true"/>
                <span asp-validation-for="Operation.OperationAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        fill_value_on_input("Amount", "Operation_OperationAmount", "input");
    </script>

}
