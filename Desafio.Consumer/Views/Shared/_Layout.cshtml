<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Desafio.Consumer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Desafio.Consumer.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar header navbar-expand-sm navbar-toggleable-sm navbar-light bg-custom border-bottom box-shadow mb-3">
            <div class="container-fluid justify-content-center">
                <div class="container d-flex justify-content-between">
                    <div class="d-block">
                            <img class="mx-auto d-block bg-circled-transparency" src="~/img/mocked_logo.png" width="30" />
                        <div class="d-flex flex-wrap">
                            <a class="custom-brand" asp-area="" asp-controller="Home" asp-action="Index">WTF .Net API consumer</a>
                        </div>
                    </div>
                    <div class="d-flex">
                        <button class="navbar-toggler custom-brand" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </div>
                    <div class="d-flex">
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link custom-brand" asp-area="" asp-controller="Home" asp-action="Index">HomePage</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link custom-brand" asp-area="" asp-controller="Product" asp-action="Index">Products</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link custom-brand" asp-area="" asp-controller="Home" asp-action="ExhibitUser">Profile</a>
                                </li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    @if (User.IsInRole("administrator"))
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link custom-brand" asp-area="" asp-controller="Home" asp-action="Users">Users</a>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-custom custom-brand">
        <div class="container custom-brand">
            &copy; 2024 - .Net WTF Challenge I - API + Consumer
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
